<%- include('../partials/header') %>
    <%- include('../partials/aside') %>
    <section id="main">
    <div id="page-header"><h1>SHOW INFORMATION</h1></div>
    <div id="view-main">
        <br>
        <h3 class="details">VENUE</h3>
        <h4 class="details"><%= post.venue %></h4><br>
        <h3 class="details">LOCATION</h3>
        <h4 class="details"><%= post.city %>, <%= post.state %></h4><br>
        <% let days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'] %>
        <% let months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']; %>
        <h3 class="details">DATE</h3>
        <h4 class="details"><%- `${days[post.date.getDay()]} &nbsp;${months[post.date.getMonth()]} &nbsp;${post.date.getDate()}, ${post.date.getFullYear()}` %></h4><br>
        <h3 class="details">SHOW DETAILS</h3>
        <h4 class="details"><%= post.description %></h4><br>
        <h3 class="details">SUBMISSIONS</h3>
        <% if (submitted.length) { %>
        <table>
            <thead>
                <th>BAND</th>
                <th>LOCATION</th>
                <th>GENRE</th>
            </thead>
            <tbody>
                <% submitted.forEach(sub => { %>
                    <tr>
                        <td><%= sub.bandName %></td>
                        <td><%= sub.city %>, <%= sub.state %></td>
                        <td><%= sub.genre %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <h4 class="details">No submissions yet...</h4>
        <% }; %>
        <div id="ret-div">
            <form action="/posts" method="GET">
                <button class="return" type="submit">RETURN TO SHOWS</button>
            </form>
        </div>
    </div>
    </section>
<%- include('../partials/footer') %>